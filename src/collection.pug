extends pug/base

append vars
  - var title = 'Collection'

block styles
  link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Playfair+Display:400,400i,700,700i&display=swap&subset=cyrillic" rel="stylesheet")
  link(href=`assets/css/main.css` rel="stylesheet")

block content
  main
    .layout__content
      .page-collection
        .container-fluid
          .layout__wrapper
            .layout__sidebar
              // Sidebar
              aside.sidebar-page
                .category
                  a.category-head-link(href="#")
                    +svg('catalog', 'category-head-link__icon')
                    span.category-head-link__name Категории
                  ul.list-category.category__list-category
                    li.list-category__item 
                      a.list-category__link Классические двери
                        +svg('arrow-category', 'list-category__icon')
                    li.list-category__item 
                      a.list-category__link Неоклассика
                        +svg('arrow-category', 'list-category__icon')
                    li.list-category__item 
                      a.list-category__link Современный стиль
                        +svg('arrow-category', 'list-category__icon')
                    li.list-category__item 
                      a.list-category__link Дизайн
                        +svg('arrow-category', 'list-category__icon')
                    li.list-category__item 
                      a.list-category__link Цельностеклянные двери
                        +svg('arrow-category', 'list-category__icon')


            .layout__container
              // Content
              .collection
                .breadcrumb
                  ul.breadcrumb__list
                    li.breadcrumb__item
                      a.breadcrumb__link(href="#") Главная
                    li.breadcrumb__item
                      a.breadcrumb__link(href="#") Каталог
                    li.breadcrumb__item Коллекция Luxury

                .title-sm Коллекция Luxury

                .jumbotron.collection__jumbotron
                  .jumbotron__container.lazy(data-bg="url(assets/img/collection/jumbotron/bg.jpg)" href="#")
                    h4.jumbotron__title Коллекция Luxury
                    p.jumbotron__descr Двери премиум класса, изготовленные с применением ценных пород дерева, европейского шпона и итальянской эмали. Эти двери для тех, кто привык выбирать лучшее. Резные элементы, выполненные по эскизам авторской работы, изящество и грация, изысканный цвет отделки, благородные пропорции, естественная элегантность.

