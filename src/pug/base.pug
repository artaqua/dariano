include _mixins/svg-icon.pug

block vars
  -
    var baseDir = ''
  -
    var title = typeof title !== 'undefined' ? title : null

doctype html
html(lang="ru")
  head
    title= title
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
    meta(name="format-detection" content="telephone=no")
    meta(name='description', content="")
    meta(name='keywords', content="")
    link(href="assets/img/favicon.ico" rel='shortcut icon')
    link(href=`assets/css/main.css` rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Playfair+Display:400,400i,700,700i&display=swap&subset=cyrillic" rel="stylesheet")
    block styles

  body(style="opacity: 0;")

    // Loader
    include _layout/loader.pug

    .layout
      // Header
      include _layout/header.pug
      // Content
      block content
      // Footer
      include _layout/footer.pug
      // Sidebar menu
      include _layout/sidebar-menu.pug
      // Popups
      include _layout/popups.pug

    // Scripts
    block scripts
      script(src=`assets/js/bundle.js`)
    

  

      
