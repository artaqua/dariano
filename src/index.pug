extends pug/base

append vars
  - var title = 'Home'


block content
  main
    .layout__content
      .page-index

        // Preview slider
        .preview-slider
          .swiper-wrapper
            .swiper-slide
              .preview-slider__item.lazy(data-bg="url(assets/img/preview-slider/slide.jpg)")
                .container-fluid
                  .preview-slider__info
                    h3.preview-slider__title Межкомнатные двери с гарантией качества
                    p.preview-slider__descr Это просто пример УТП на баннере. Данный шаблон можно будет заверстать 
                    a.preview-slider__btn(href="catalog.html") Посмотреть каталог
            .swiper-slide
              .preview-slider__item.lazy(data-bg="url(assets/img/preview-slider/slide-2.jpg)")
                .container-fluid
                  .preview-slider__info
                    h3.preview-slider__title Lorem ipsum dolor sit amet.
                    p.preview-slider__descr Это просто пример УТП на баннере. Данный шаблон можно будет заверстать 
                    a.preview-slider__btn(href="catalog.html") Посмотреть каталог
            .swiper-slide
              .preview-slider__item.lazy(data-bg="url(assets/img/preview-slider/slide.jpg)")
                .container-fluid
                  .preview-slider__info
                    h3.preview-slider__title Lorem ipsum dolor sit amet, consectetur adipisicing.
